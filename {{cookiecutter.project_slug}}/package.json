{
  "name": "my-remix-app",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "dev": "remix dev -c \"node server.mjs\"",
    "start": "remix-serve ./build/index.js",
    "typecheck": "tsc",
    "db:reset": "prisma db push --force-reset && prisma db seed",
    "test:e2e": "vitest -c ./vitest.config.e2e.ts --coverage",
    "test:staging": "vitest -c ./vitest.config.staging.ts",
    "test:unit": "vitest -c ./vitest.config.unit.ts --coverage",
    "test:integration": "vitest -c ./vitest.config.integration.ts --coverage",
    "pages:deploy": "pnpm run build && wrangler pages deploy ./public"
  },
  "dependencies": {
    "@prisma/client": "^5.5.2",
    "@remix-run/cloudflare": "^2.2.0",
    "@remix-run/cloudflare-pages": "^2.2.0",
    "@remix-run/express": "^2.2.0",
    "@remix-run/node": "^2.2.0",
    "@remix-run/react": "^2.2.0",
    "@remix-run/serve": "^2.2.0",
    "isbot": "^3.6.8",
    "nodemon": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "github:cloudflare/workers-types",
    "@playwright/test": "^1.39.0",
    "@remix-run/dev": "^2.2.0",
    "@remix-run/eslint-config": "^2.2.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.36",
    "@types/react-dom": "^18.2.14",
    "@types/supertest": "^2.0.16",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "eslint": "^8.38.0",
    "express": "^4.18.2",
    "playwright": "^1.39.0",
    "prisma": "^5.5.2",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6",
    "vitest-mock-extended": "^1.3.1",
    "wrangler": "^3.15.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "node --loader ts-node/esm prisma/seed.ts"
  }
}
